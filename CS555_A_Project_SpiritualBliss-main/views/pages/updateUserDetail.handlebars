<div
   class="modal-dialog modal-lg"
   role="document"
   id="user_info_modal_dialog"
   >
   <div class="modal-content container update_user_container">
      <div class="modal-header">
         <h3
            class="modal-title up_user"
            id="userInfoModalLongTitle"
            >Update User Information</h3>
      </div>
      <br>
      <form id="userInfoForm" action="/users/updateUser" method="post">
        {{! }}
        {{#if error}}
        <div>
            <p class="text-danger"> Error: {{error}} </p>
        </div>
        {{/if}}
        {{!  }}
        {{#if errors}}
        {{#each errors}}
            <div>
            <p class="text-danger"> {{this}} </p>
            </div>
        {{/each}}
        {{/if}}
        {{!  }}
         <div class="form-group row">
            <label class="col-form-label col-4 up_user" for="firstName">First Name: </label>
            <div class="col-8">
               <input
                  type="text"
                  class="form-control"
                  name="firstName"
                  id="firstName"
                  required="required"
                  placeholder="{{user.firstName}}"
                  value="{{user.firstName}}"
                  />
               <div class="invalid-feedback">
                  First name cannot be empty
               </div>
            </div>
         </div>
         {{! }}
         <div class="form-group row">
            <label class="col-form-label col-4 up_user" for="lastName">Last Name: </label>
            <div class="col-8">
               <input
                  type="text"
                  class="form-control"
                  name="lastName"
                  id="lastName"
                  required="required"
                  placeholder="{{user.lastName}}"
                  value="{{user.lastName}}"
                  />
               <div class="invalid-feedback">
                  Last name cannot be empty
               </div>
            </div>
         </div>
         {{! }}
         <div class="form-group row">
            <label class="col-form-label col-4 up_user" for="emailId">Email Id: </label>
            <div class="col-8">
                <p>{{user.emailId}}</p>
               {{!-- <input
                  type="email"
                  class="form-control"
                  name="emailId"
                  id="emailId"
                  required="required"
                  placeholder="{{user.emailId}}"
                  value="{{user.emailId}}"
                  />
               <div class="invalid-feedback">
                  Email cannot be empty
               </div> --}}
            </div>
         </div>
         {{! }}
         {{!-- <div class="form-group row">
            <label class="col-form-label col-4" for="password">Password: </label>
            <div class="col-8">
               <input
                  type="password"
                  class="form-control"
                  name="password"
                  id="password"
                  required="required"
                  placeholder="Password"
                  />
               <div class="invalid-feedback">
                  Password cannot be empty
               </div>
            </div>
         </div>
         {{! }} --}}
         <div class="form-group row">
            <label class="col-form-label col-4 up_user" for="phoneNumber">Phone Number:
            </label>
            <div class="col-8">
               <input
                  type="number"
                  class="form-control"
                  id="phoneNumber"
                  name="phoneNumber"
                  required="required"
                  placeholder="{{user.mobile}}"
                  value="{{user.mobile}}"
                  />
               <div class="invalid-feedback">
                  Phone number cannot be empty
               </div>
            </div>
         </div>
         {{! }}
         <div class="form-group row">
            <label class="col-form-label col-4 up_user" for="Line1">Address Line 1:</label>
            <div class="col-8">
               <input
                  type="text"
                  class="form-control"
                  name="Line1"
                  id="Line1"
                  required="required"
                  placeholder="{{user.address.Line1}}"
                  value="{{user.address.Line1}}"
                  />
               <div class="invalid-feedback">
                  Line 1 cannot be empty
               </div>
            </div>
         </div>
         {{! }}
         <div class="form-group row">
            <label class="col-form-label col-4 up_user" for="Line2">Address Line 2:</label>
            <div class="col-8">
               <input
                  type="text"
                  class="form-control"
                  name="Line2"
                  id="Line2"
                  required="required"
                  placeholder="{{user.address.Line2}}"
                  value="{{user.address.Line2}}"
                  />
               <div class="invalid-feedback">
                  Line 2 cannot be empty
               </div>
            </div>
         </div>
         {{! }}
         <div class="form-group row">
            <label class="col-form-label col-4 up_user" for="City">City: </label>
            <div class="col-8">
               <input
                  type="text"
                  class="form-control"
                  name="City"
                  id="City"
                  required="required"
                  placeholder="{{user.address.City}}"
                  value="{{user.address.City}}"
                  />
               <div class="invalid-feedback">
                  City name cannot be empty
               </div>
            </div>
         </div>
         {{! }}
         <div class="form-group row">
            <label class="col-form-label col-4 up_user" for="State">State: </label>
            <div class="col-8">
               <input
                  type="text"
                  class="form-control"
                  name="State"
                  id="State"
                  required="required"
                  placeholder="{{user.address.State}}"
                  value="{{user.address.State}}"
                  />
               <div class="invalid-feedback">
                  State cannot be empty
               </div>
            </div>
         </div>
         {{! }}
         <div class="form-group row">
            <label class="col-form-label col-4 up_user" for="ZipCode">Zip Code: </label>
            <div class="col-8">
               <input
                  type="number"
                  class="form-control"
                  name="ZipCode"
                  id="ZipCode"
                  required="required"
                  placeholder="{{user.address.ZipCode}}"
                  value="{{user.address.ZipCode}}"
                  />
               <div class="invalid-feedback">
                  Zipcode cannot be empty
               </div>
            </div>
         </div>
         <div class="modal-footer">
            <input
               type="submit"
               class="btn btn-primary"
               id="updateuserSubmit"
               />
         </div>
      </form>
   </div>
</div>