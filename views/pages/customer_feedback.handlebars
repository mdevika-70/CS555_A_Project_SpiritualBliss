<div class="feedback-form container">
  <form
    action="/users/feedback"
    id="feedback-form"
    method="POST"
    class="form-horizontal"
  >
    <div class="row">
      <div class="col-8 offset-4">
        <h2>Customer feedback</h2>
      </div>
    </div>
    
    {{#if error}}
      <div>
        <p class="text-danger"> Error: {{error}} </p>
      </div>
    {{/if}}
    
    {{#if errors}}
      {{#each errors}}
        <div>
          <p class="text-danger"> {{this}} </p>
        </div>
      {{/each}}
    {{/if}}
    
    <div class="form-group row">
      <label class="col-form-label col-4" for="feedback-details">Enter your detailed Feeback </label>
      <div class="col-8">
        <input
          type="text"
          class="form-control"
          name="feedback-details"
          id="feedback-details"
          required="required"
        />
        <div class="invalid-feedback">
       Feed back cannot be empty
        </div>
      </div>
    </div>
    {{! }}
    
    {{! }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="emailId">Enter your email id </label>
      <div class="col-8">
        <input
          type="email"
          class="form-control"
          name="emailId"
          id="emailId"
          required="required"
        />
        <div class="invalid-feedback">
          Email cannot be empty
        </div>
      </div>
    </div>
    {{! }}
   
    {{! }}
    <div class="form-group row">
      <label class="col-form-label col-4" for="suggestions">Suggestions for us
      </label>
      <div class="col-8">
        <input
          type="text"
          class="form-control"
          id="suggestions"
          name="suggestions"
          required="required"
        />
        <div class="invalid-feedback">
        Suggestions cannot be empty
        </div>
      </div>
    </div>
   
    <div class="form-group row">
      <label class="col-form-label col-4" for="ZipCode">Zip Code: </label>
      <div class="col-8">
        <input
          type="number"
          class="form-control"
          name="ZipCode"
          id="ZipCode"
          required="required"
        />
        <div class="invalid-feedback">
          Zipcode cannot be empty
        </div>
      </div>
    </div>
    {{! }}
    <div class="form-group row">
      <div class="col-8 offset-4">
        <input type="submit" id="submitInfo" class="btn btn-primary btn-lg" />
      </div>
    </div>
    
    {{! }}
  </form>
</div>
